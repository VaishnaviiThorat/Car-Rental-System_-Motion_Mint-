@model IEnumerable<CarVariantMVC.Models.VariantViewModel>

@{
    ViewData["Title"] = "Variant Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Variant Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>

        body {
            background-image: url('/images/55.jpg'); /* Update with the correct path to your image */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Content Styling */
        #content {
            margin-left: 250px;
            transition: all 0.3s ease;
            padding: 20px;
            width: calc(100% - 250px);
        }

        /* Navigation Link Styling */
        .nav-link {
            padding: 10px 0;
            font-size: 16px;
            text-decoration: none;
            color: #fff;
            border-radius: 5px;
        }

            .nav-link:hover {
                background-color: #495057;
            }

        /* Table Styling */
        table {
            background-color: rgba(255, 255, 255, 0.7);
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
        }

        .table thead tr {
            background-color: #343a40; /* Dark background for table header */
            color: #fff; /* White text */
        }

        th, td {
            padding: 0.75rem;
            vertical-align: middle;
            border: 1px solid #dee2e6;
        }

        th {
            text-align: left;
            font-weight: bold;
            color: white; /* Ensures white text in headings */
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #e9ecef;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        /* Button Styling */
        .btn {
            border-radius: 0.25rem;
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }

        .btn-primary {
            background-color: #007bff;
            border: 1px solid #007bff;
        }

            .btn-primary:hover {
                background-color:midnightblue;
                border-color: midnightblue;
            }

        .btn-info {
            background-color: #17a2b8;
            border: 1px solid #17a2b8;
        }

            .btn-info:hover {
                background-color:darkslateblue;
                border-color: darkslateblue;
                ;
            }

        .btn-danger {
            background-color: #dc3545;
            border: 1px solid #dc3545;
        }


        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    @Html.Partial("_AdminNavbar") <!-- Include the admin navbar -->
    <!-- Main Content -->
    <div id="content" class="p-4">
        <h2 style="color:white">Variant List</h2>

        <table class="table table-bordered bg-dark">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Model Number</th>
                    <th>Fuel Type</th>
                    <th>Seating Capacity</th>
                    <th>Price Per Day</th>
                    <th>Year</th>
                    <th>City</th>
                    <th>CompanyName</th>
                    <th>Status</th>
                    <th>AC</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="@Url.Content("~/images/" + item.Image)" alt="@item.Name" width="100" height="100" />
                            }
                            else
                            {
                                <p>No Image</p>
                            }
                        </td>
                        <td>@item.Name</td>
                        <td>@item.ModelNumber</td>
                        <td>@item.FuelType</td>
                        <td>@item.SeatingCapacity</td>
                        <td>@item.PricePerDay</td>
                        <td>@item.Year</td>
                        <td>@item.City</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Status</td>
                        <td>@(item.Isac ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                            <br />
                            <br />
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="CreateVariant" class="btn btn-primary">Add Variant</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>
</html>
