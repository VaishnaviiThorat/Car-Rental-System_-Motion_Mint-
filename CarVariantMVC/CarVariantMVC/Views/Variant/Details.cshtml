@model CarVariantMVC.Models.VariantViewModel

@{
    ViewData["Title"] = "Variant Details";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Variant Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>

    @Html.Partial("_AdminNavbar") <!-- Include the admin navbar -->

    <div id="content" class="flex-grow-1 p-4">
        <div class="container mt-4">
            <h1>Variant Details</h1>

            <div class="card">
                <div class="card-body">

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PricePerDay)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.PricePerDay)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Year)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Year)
                        </dd>
                    </dl>
                </div>
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>

        </div>
    </div>

    <!-- jQuery and Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" crossorigin="anonymous"></script>

   
    <style>
       
        body {
            background-image: url('/images/55.jpg'); /* Update with the correct path to your image */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }



        /* Content Styling */
        #content {
            margin-left: 250px;
            transition: all 0.3s ease;
            padding: 20px;
            width: calc(100% - 250px);
        }

        /* Card Styling */
        .card {
            background-color: rgba(255, 255, 255, 0.7);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }

        /* Navigation Link Styling */
        .nav-link {
            padding: 10px 0;
        }
    </style>
</body>
</html>
