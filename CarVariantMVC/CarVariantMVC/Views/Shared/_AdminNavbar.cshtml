<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Include Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom CSS -->
    <style>
        /* Sidebar Styling */
        #sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; /* Dark background for sidebar */
            color: #fff;
            transition: all 0.3s ease;
        }

        /* Content Styling */
        #content {
            margin-left: 250px;
            padding: 20px;
            width: calc(100% - 250px);
            transition: all 0.3s ease;
        }

        /* Navigation Link Styling */
        .nav-link {
            color: #fff; /* White text color for nav links */
            padding: 10px 15px; /* Padding for nav links */
        }

            .nav-link:hover {
                background-color:chocolate; /* Darker background on hover */
                color: #fff; /* Maintain white text on hover */
            }

        /* Logout Button Styling */
        .btn-outline-light {
            background-color: transparent;
            border: 1px solid #fff;
            color: #fff;
            transition: background-color 0.3s, color 0.3s;
        }

            .btn-outline-light:hover {
                background-color: #fff;
                color: #000;
            }

        .btn i {
            font-size: 1.25rem; /* Adjust icon size */
        }

        /* Admin Dashboard Heading Styling */
        #sidebar h2 {
            font-size: 1.5rem; /* Adjust font size as needed */
            margin-bottom: 20px; /* Space below heading */
            font-weight: bold; /* Make heading bold */
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div id="sidebar" class="p-3">
            <h2 class="navbar-brand">Admin Dashboard</h2>
            <hr />
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Companies" asp-action="Create">Add Company</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Companies" asp-action="Index">Show Companies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Variant" asp-action="CreateVariant">Add Variant</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Variant" asp-action="Index">Show Variants</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="Index">Show Customers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Bookings" asp-action="Index">Show All Bookings</a>
                </li>
            </ul>
            <br />
            <form asp-controller="Account" asp-action="Logout" method="get" class="mt-auto">
                <button type="submit" class="btn btn-outline-light w-100 d-flex justify-content-center align-items-center">
                    <i class="fas fa-sign-out-alt"></i> <!-- Font Awesome logout icon -->
                </button>
            </form>
        </div>
    </div>

    <!-- Sound effect -->
    <audio id="hover-sound" src="~/music/click-21156.mp3" preload="auto"></audio>
   
    
    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript to Play Sound on Hover -->
    <script>
        // Select all navigation links
        document.querySelectorAll('.nav-link').forEach(function (link) {
            link.addEventListener('mouseenter', function () {
                var sound = document.getElementById('hover-sound');
                sound.currentTime = 0;
                sound.play();
            });
        });
    </script>
</body>
</html>
