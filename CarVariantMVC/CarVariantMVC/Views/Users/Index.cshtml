@model IEnumerable<CarVariantMVC.Models.User>

@{
    ViewData["Title"] = "Users Index";
    Layout = null; // Disable the default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            background-image: url('/images/55.jpg'); /* Update with the correct path to your image */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Content Styling */
        .content {
            margin-left: 250px;
            padding: 20px;
            width: calc(100% - 250px);
            transition: all 0.3s ease;
            align-content:center;
            align-items:center;

        }

        /* Card Styling */
        .card {
            padding: 20px;
            margin-top: 20px;

            background-color: rgba(255, 255, 255, 0.7);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 0.25rem;
        }


            .table thead th {
                background-color: #343a40; /* Dark background for table header */
                color: #fff; /* White text */
            }

    </style>
</head>
<body>

    <!-- Include the Admin Navbar (Sidebar) -->
    @await Html.PartialAsync("_AdminNavbar")

    <!-- Content Area -->
    <div id="content">
        <div class="container mt-5">
            <h1 style="color:white">Users Index</h1>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Username)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Username)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Include Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
