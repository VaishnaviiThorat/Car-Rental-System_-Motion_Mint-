@model IEnumerable<CarVariantMVC.Models.Booking>

@{
    ViewData["Title"] = "Return a Car";
    Layout = null; // Disable default layout to use custom navbar
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Background Image Styling */
        body {
            background-image: url('/images/1c75c43f-e46a-4ce5-81c2-159f7dbc5264_safari.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

       

        /* Content Area Styling */
        #content {
            margin-left: 250px;
            padding: 40px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Form Box Styling */
        .form-box {
            background-color: rgba(255, 255, 255, 0.8); /* White background with transparency */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
        }

        /* Header Styling */
        h2 {
            margin-bottom: 20px;
            text-align: center;
            color: #343a40;
        }

        /* Additional styling for labels and text */
        .form-group label {
            color: #343a40;
        }

        .form-group select {
            color: #343a40;
        }
    </style>
</head>
<body>

    <div id="sidebar">
        @await Html.PartialAsync("_UserNavbar") <!-- Include User Navbar -->
    </div>

    <div id="content">
        <div class="form-box">
            <h2>Return a Car</h2>
            <hr />
            <form asp-action="ConfirmReturn" method="post">
                <div class="form-group">
                    <label for="bookingId">Select a Booking to Return:</label>
                    <select id="bookingId" name="bookingId" class="form-control">
                        <option value="">-- Select Booking --</option>
                        @foreach (var booking in Model)
                        {
                            <option value="@booking.Id">@booking.Variant.Name - @booking.BookingDate.ToShortDateString()</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Return Car</button>
            </form>
        </div>
    </div>

</body>
</html>
